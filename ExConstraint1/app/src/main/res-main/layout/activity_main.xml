<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context="milu.kiriu2010.excon1.MainActivity">

    <TextView
        android:id="@+id/lblFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/LABEL_FIRST_NAME"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@+id/lblFirstName"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/lblFirstName"
        app:layout_constraintTop_toBottomOf="@+id/lblFirstName"
        tools:text="@string/LABEL_FIRST_NAME"
        android:autofillHints="" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/BTN_ADD_USER"
        app:layout_constraintBottom_toBottomOf="@+id/txtFirstName"
        app:layout_constraintStart_toEndOf="@+id/txtFirstName"
        app:layout_constraintTop_toTopOf="@+id/txtFirstName" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="top|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFirstName">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnA01"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/BTN_A01" />

            <Button
                android:id="@+id/btnA02"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/BTN_A02" />

            <Button
                android:id="@+id/btnA03"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/BTN_A03" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAlarmClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm" />

            <Button
                android:id="@+id/btnJSON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BTN_JSON" />


            <Button
                android:id="@+id/btnCountDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count Down" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BTN_CLOCK" />


            <Button
                android:id="@+id/btnMemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memo" />

            <Button
                android:id="@+id/btnAccBall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加速度センサ" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slide" />

            <Button
                android:id="@+id/btnFileRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BTN_FILE" />

            <Button
                android:id="@+id/btnSaintTropez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saint Tropez" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/BTN_IMAGE" />

            <Button
                android:id="@+id/btnXML"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BTN_XML" />

            <Button
                android:id="@+id/btnTeamLst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/BTN_TEAM_LIST" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Counter" />

            <Button
                android:id="@+id/btnTimeZoneRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="TimeZone(RecyclerView)" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知" />

            <Button
                android:id="@+id/btnGaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAction" />

            <Button
                android:id="@+id/btnGshooting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GShooting" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnGlabyrinth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GLabyrinth" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>