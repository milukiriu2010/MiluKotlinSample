<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".a18.A18Activity">

    <TextView
        android:id="@+id/labelTitleA18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/LABEL_TITLE_A18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dataTitleA18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:autofillHints="@string/DATA_TITLE_A18"
        android:ems="10"
        android:hint="@string/DATA_TITLE_A18"
        android:inputType="textPersonName"
        android:text="@string/DATA_TITLE_A18"
        app:layout_constraintBottom_toBottomOf="@+id/labelTitleA18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelTitleA18"
        app:layout_constraintTop_toTopOf="@+id/labelTitleA18" />

    <TextView
        android:id="@+id/labelContentA18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/LABEL_CONTENT_A18"
        app:layout_constraintEnd_toEndOf="@+id/labelTitleA18"
        app:layout_constraintStart_toEndOf="@+id/labelTitleA18"
        app:layout_constraintStart_toStartOf="@+id/labelTitleA18"
        app:layout_constraintTop_toBottomOf="@+id/labelTitleA18" />

    <EditText
        android:id="@+id/dataContentA18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:autofillHints="@string/DATA_CONTENT_A18"
        android:ems="10"
        android:hint="@string/DATA_CONTENT_A18"
        android:inputType="textPersonName"
        android:text="@string/DATA_CONTENT_A18"
        app:layout_constraintBottom_toBottomOf="@+id/labelContentA18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelContentA18"
        app:layout_constraintTop_toTopOf="@+id/labelContentA18" />

    <TextView
        android:id="@+id/labelDelayA18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/LABEL_DELAY_A18"
        app:layout_constraintEnd_toEndOf="@+id/labelContentA18"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labelContentA18"
        app:layout_constraintTop_toBottomOf="@+id/labelContentA18" />

    <EditText
        android:id="@+id/dataDelayA18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:autofillHints="@string/DATA_DELAY_A18"
        android:ems="10"
        android:hint="@string/DATA_DELAY_A18"
        android:inputType="numberSigned"
        android:text="@string/DATA_DELAY_A18"
        app:layout_constraintBottom_toBottomOf="@+id/labelDelayA18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelDelayA18"
        app:layout_constraintTop_toTopOf="@+id/labelDelayA18" />

    <RadioGroup
        android:id="@+id/radioGroupNotificationStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelDelayA18">

        <RadioButton
            android:id="@+id/radioButtonNormalA18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/A18_RB_NORMAL" />

        <RadioButton
            android:id="@+id/radioButtonPictureA18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/A18_RB_PICTURE" />

        <RadioButton
            android:id="@+id/radioButtonTextA18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/A18_RB_TEXT" />

        <RadioButton
            android:id="@+id/radioButtonInboxA18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/A18_RB_INBOX"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="310dp" />

        <RadioButton
            android:id="@+id/radioButtonProgressA18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/A18_RB_PROGRESS" />
    </RadioGroup>

    <Button
        android:id="@+id/btnNotify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/BTN_NOTIFY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupNotificationStyle" />

    <Button
        android:id="@+id/btnNotifyStartService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/BTN_NOTIFY_START_SERVICE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNotify" />

    <Button
        android:id="@+id/btnNotifyDownload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/BTN_NOTIFY_DOWNLOAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNotifyStartService" />

    <Button
        android:id="@+id/btnNotifyIntentStart"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/BTN_NOTIFY_INTENT_START"
        app:layout_constraintEnd_toStartOf="@+id/btnNotifyIntentStop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNotifyDownload" />

    <Button
        android:id="@+id/btnNotifyIntentStop"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/BTN_NOTIFY_INTENT_STOP"
        app:layout_constraintBottom_toBottomOf="@+id/btnNotifyIntentStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnNotifyIntentStart"
        app:layout_constraintTop_toTopOf="@+id/btnNotifyIntentStart" />

</androidx.constraintlayout.widget.ConstraintLayout>