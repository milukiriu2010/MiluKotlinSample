<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="milu.kiriu2010.excon2.a0x.websearch.WebSearchActivity">

    <TextView
        android:id="@+id/tvSearchFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Search For"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSearchFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Donald Trump"
        app:layout_constraintStart_toStartOf="@+id/tvSearchFor"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchFor" />

    <ImageView
        android:id="@+id/ivSearchFor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/magnify_glass_background"
        app:layout_constraintStart_toStartOf="@+id/etSearchFor"
        app:layout_constraintTop_toBottomOf="@+id/etSearchFor"
        app:srcCompat="@drawable/magnify_glass" />
</androidx.constraintlayout.widget.ConstraintLayout>
