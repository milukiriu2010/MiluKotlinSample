<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- item① -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <!-- 色:パープル -->
            <solid android:color="#8e44ad" />
            <!-- solid android:color="#1abc9c" /  -->
        </shape>
    </item>

    <!-- item② -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- item①に対して2dp内側に入る。 -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <!-- 色:白 -->
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- item③ -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <!-- item②に対して2dp内側に入る。 -->
        <shape android:shape="rectangle">
            <!-- 色:パープル -->
            <solid android:color="#9b59b6" />
        </shape>
    </item>
</layer-list>