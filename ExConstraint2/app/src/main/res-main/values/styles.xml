<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BossActivityの背景を緑にする -->
    <drawable name="bossback">#4400ff00</drawable>
    <!-- style name="Theme.ChildTranslucent" parent="android:style/Theme.Translucent" -->
    <style name="Theme.ChildTranslucent" parent="AppTheme">
        　　<item name="android:windowBackground">@drawable/bossback</item>
        　　<item name="android:windowNoTitle">true</item>
    </style>

    <!-- Custom ActionBar -->
    <!-- https://www.journaldev.com/9952/android-custom-action-bar-example-tutorial -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light">

        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>



</resources>
