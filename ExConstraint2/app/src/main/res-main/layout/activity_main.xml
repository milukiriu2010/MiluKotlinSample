<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/female"
            android:text="female"></RadioButton>

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/male"

            android:checked="true"></RadioButton>

    </RadioGroup>

    <Button
        android:id="@+id/btnRATE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_RATE"
        app:layout_constraintEnd_toEndOf="@+id/btnTrafficLight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnTrafficLight"
        app:layout_constraintTop_toBottomOf="@+id/btnTrafficLight" />

    <Button
        android:id="@+id/btnRecycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_RECYCLE"
        app:layout_constraintEnd_toEndOf="@+id/btnCM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnCM"
        app:layout_constraintTop_toBottomOf="@+id/btnCM" />

    <Button
        android:id="@+id/btnANIME"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Anime Scale"
        app:layout_constraintEnd_toEndOf="@+id/btnRATE"
        app:layout_constraintStart_toStartOf="@+id/btnRATE"
        app:layout_constraintTop_toBottomOf="@+id/btnRATE" />

    <Button
        android:id="@+id/btnSEEK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BTN_SEEK"
        app:layout_constraintStart_toStartOf="@+id/btnEMAIL"
        app:layout_constraintTop_toBottomOf="@+id/btnEMAIL" />

    <Button
        android:id="@+id/btnCM"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:text="@string/BTN_CM"
        app:layout_constraintEnd_toEndOf="@+id/btnCustomAction"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnCustomAction"
        app:layout_constraintTop_toBottomOf="@+id/btnCustomAction" />

    <Button
        android:id="@+id/btnTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_oval"
        android:text="@string/BTN_TEMPERATURE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <Button
        android:id="@+id/btnSTOPWATCH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_STOP_WATCH"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDICE"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnTemperature"
        app:layout_constraintTop_toTopOf="@+id/btnTemperature"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnCustomAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BTN_CUSTOM_ACTION"
        app:layout_constraintBottom_toTopOf="@+id/btnWebSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/btnSTOPWATCH" />

    <Button
        android:id="@+id/btnDICE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_black"
        android:text="@string/BTN_DICE"
        app:layout_constraintStart_toEndOf="@+id/btnTemperature"
        app:layout_constraintStart_toStartOf="@+id/btnTemperature"
        app:layout_constraintTop_toBottomOf="@+id/btnTemperature" />

    <Button
        android:id="@+id/btnLargeBmp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_LARGE_BMP"
        app:layout_constraintBottom_toBottomOf="@+id/btnEMAIL"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/btnFibonnaci"
        app:layout_constraintTop_toBottomOf="@+id/btnScanBarcode"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvAppInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/layer_frame1"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/gender"
        app:layout_constraintTop_toTopOf="@+id/gender"
        tools:text="TRUE" />

    <TextView
        android:id="@+id/tvBuildConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_frame2"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/tvAppInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvAppInfo"
        tools:text="TRUE" />

    <Button
        android:id="@+id/btnTrafficLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_TRAFFIC_LIGHT"
        app:layout_constraintEnd_toEndOf="@+id/btnRecycle"
        app:layout_constraintStart_toStartOf="@+id/btnRecycle"
        app:layout_constraintTop_toBottomOf="@+id/btnRecycle" />

    <Button
        android:id="@+id/btnEMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@+id/btnScanBarcode"
        app:layout_constraintTop_toBottomOf="@+id/btnScanBarcode" />

    <Button
        android:id="@+id/btnFibonnaci"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fibonnaci"
        app:layout_constraintBottom_toBottomOf="@+id/btnScanBarcode"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/btnWebSearch"
        app:layout_constraintTop_toTopOf="@+id/btnScanBarcode"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/btnScanBarcode"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="Scan"
        app:layout_constraintStart_toStartOf="@+id/btnDICE"
        app:layout_constraintTop_toBottomOf="@+id/btnDICE" />

    <Button
        android:id="@+id/btnWebSearch"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="WebSearch"
        app:layout_constraintBottom_toTopOf="@+id/btnScanBarcode"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSTOPWATCH"
        app:layout_constraintTop_toTopOf="@+id/btnDICE"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnPinch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinch"
        app:layout_constraintStart_toStartOf="@+id/btnSEEK"
        app:layout_constraintTop_toBottomOf="@+id/btnSEEK" />

    <Button
        android:id="@+id/btnSensorTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="温度センサ"
        app:layout_constraintBottom_toTopOf="@+id/btnPinch"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/btnEMAIL"
        app:layout_constraintTop_toBottomOf="@+id/btnEMAIL"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSensorLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="照度センサ"
        app:layout_constraintBottom_toBottomOf="@+id/btnPinch"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSensorTemperature"
        app:layout_constraintTop_toTopOf="@+id/btnPinch"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnAnimeMove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Anime Move"
        app:layout_constraintEnd_toEndOf="@+id/btnANIME"
        app:layout_constraintStart_toStartOf="@+id/btnANIME"
        app:layout_constraintTop_toBottomOf="@+id/btnANIME" />

    <Button
        android:id="@+id/btnCanvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canvas"
        app:layout_constraintEnd_toStartOf="@+id/btnSensorLight"
        app:layout_constraintStart_toStartOf="@+id/btnPinch"
        app:layout_constraintTop_toBottomOf="@+id/btnPinch" />

    <Button
        android:id="@+id/btnTabbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabbed"
        app:layout_constraintEnd_toEndOf="@+id/btnCanvas"
        app:layout_constraintStart_toStartOf="@+id/btnCanvas"
        app:layout_constraintTop_toBottomOf="@+id/btnCanvas" />

    <Button
        android:id="@+id/btnBottomNavi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bottom Navi"
        app:layout_constraintEnd_toEndOf="@+id/btnAnimeMove"
        app:layout_constraintStart_toStartOf="@+id/btnAnimeMove"
        app:layout_constraintTop_toBottomOf="@+id/btnAnimeMove" />

    <Button
        android:id="@+id/btnNaviDrawer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Navi Drawer"
        app:layout_constraintEnd_toEndOf="@+id/btnBottomNavi"
        app:layout_constraintStart_toStartOf="@+id/btnBottomNavi"
        app:layout_constraintTop_toBottomOf="@+id/btnBottomNavi" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="211dp" />

</android.support.constraint.ConstraintLayout>