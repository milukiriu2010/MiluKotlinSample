<?xml version="1.0" encoding="utf-8"?>
<!-- TextView A0XBのデザインを設定 -->
<!-- DEBUG右 -->
<!-- テキスト:白 -->
<!-- 枠１層:左上を白っぽく-->
<!-- 枠２層:右下を黒っぽく -->
<!-- 枠３層:中を灰色っぽく -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- item① -->
    <!-- 左上を白っぽく -->
    <item>
        <shape>
            <corners android:radius="8dp"/>
            <padding android:left="3dp" android:top="3dp"/>
            <solid android:color="#FFC0C0C0"/>
        </shape>
    </item>
    <!-- item② -->
    <!-- 右下を黒っぽく -->
    <item>
        <shape>
            <corners android:radius="8dp"/>
            <padding android:right="3dp" android:bottom="3dp"/>
            <solid android:color="#FF404040"/>
        </shape>
    </item>
    <!-- item③ -->
    <!-- 中を灰色っぽく -->
    <item>
        <shape>
            <corners android:radius="10dp"/>
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
            <solid android:color="#FF808080"/>
        </shape>
    </item>
</layer-list>