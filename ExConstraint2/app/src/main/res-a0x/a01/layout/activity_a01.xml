<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a0x.a01.A01Activity">

    <EditText
        android:id="@+id/tvA01A"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/TV_A01AH"
        android:inputType="textMultiLine|textPersonName"
        android:lines="3"
        android:maxLines="3"
        android:minLines="3"
        android:text="@string/TV_A01A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvA01B"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/TV_A01B"
        app:layout_constraintEnd_toEndOf="@+id/tvA01C"
        app:layout_constraintStart_toStartOf="@+id/tvA01C"
        app:layout_constraintTop_toBottomOf="@+id/tvA01A" />

    <SeekBar
        android:id="@+id/sbA01B"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="10"
        android:min="0"
        android:progress="5"
        app:layout_constraintBottom_toBottomOf="@+id/tvA01B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvA01B"
        app:layout_constraintTop_toTopOf="@+id/tvA01B" />

    <TextView
        android:id="@+id/tvA01C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/TV_A01C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvA01B" />

    <SeekBar
        android:id="@+id/sbA01C"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="10"
        android:min="0"
        android:progress="5"
        app:layout_constraintBottom_toBottomOf="@+id/tvA01C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvA01C"
        app:layout_constraintTop_toTopOf="@+id/tvA01C" />

    <Button
        android:id="@+id/btnA01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/BTN_A01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvA01C" />
</androidx.constraintlayout.widget.ConstraintLayout>