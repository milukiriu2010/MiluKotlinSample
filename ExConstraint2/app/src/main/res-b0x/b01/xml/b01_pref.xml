<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:asp="http://schemas.android.com/apk/res-auto">
    　　<PreferenceCategory android:title="@string/B18_PC_TITLE">
    　　　　<!-- チェックボックスによる設定 -->
    　　　　<CheckBoxPreference
                android:key="B18_CB_KEY"
                android:title="@string/B18_CB_TITLE"
                android:summary="@string/B18_CB_SUMMARY"
                android:defaultValue="true"/>
    　　　　<!-- エディットテキストによる設定 -->
    　　　　<EditTextPreference
                android:key="B18_ED_KEY"
                android:title="@string/B18_ED_TITLE"
                android:summary="@string/B18_ED_SUMMARY" />
    　　　　<!-- リストによる設定 -->
    　　　　<ListPreference
                android:key="B18_LIST_KEY"
                android:title="@string/B18_LS_TITLE"
                android:summary="@string/B18_LS_SUMMARY"
                android:entries="@array/B18_LIST_ENTRIES"
                android:entryValues="@array/B18_LIST_ENTRYVALUES"/>
            <!-- スイッチによる設定 -->
            <SwitchPreference
                android:key="B18_SW_KEY"
                android:title="@string/B18_SW_TITLE"
                android:summary="@string/B18_SW_SUMMARY"
                android:defaultValue="false"
                />
            <!-- シークバー -->
            <SeekBarPreference
                android:key="B18_SB_KEY"
                android:title="@string/B18_SB_TITLE"
                android:summary="@string/B18_SB_SUMMARY"
                android:defaultValue="3"
                android:max="10"
                asp:min="2"
                />

    　　　　<!-- 着信音の設定 -->
    　　　　<!-- RingtonePreference android:key="ringtone_key"
                android:title="@string/B18_RT_TITLE"
                android:summary="@string/B18_RT_SUMMARY"
                android:showDefault="true"/ -->
    　　</PreferenceCategory>
</PreferenceScreen>