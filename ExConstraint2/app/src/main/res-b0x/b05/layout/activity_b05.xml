<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout android:id="@+id/llB05A"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#EE501B"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvB05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TV_B05"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivB05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/TV_B05"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/btnB05A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BTN_B05A" />
    </LinearLayout>
    <LinearLayout android:id="@+id/llB05B"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00ADEF"
        android:gravity="center"
        android:orientation="vertical" />
    <LinearLayout android:id="@+id/llB05C"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#80CC28"
        android:gravity="center"
        android:orientation="vertical" />
</LinearLayout>
