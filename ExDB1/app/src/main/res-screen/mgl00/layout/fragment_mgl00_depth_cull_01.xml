<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <milu.kiriu2010.gui.view.MyGLES20View
        android:id="@+id/myGLES20ViewMGL00"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerShader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:entries="@array/shaderlist"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDepth" />

    <CheckBox
        android:id="@+id/checkBoxDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Depth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myGLES20ViewMGL00" />

    <CheckBox
        android:id="@+id/checkBoxCull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Cull"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxDepth"
        app:layout_constraintStart_toEndOf="@+id/checkBoxDepth"
        app:layout_constraintTop_toTopOf="@+id/checkBoxDepth" />

    <CheckBox
        android:id="@+id/checkBoxRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rotate"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxCull"
        app:layout_constraintStart_toEndOf="@+id/checkBoxCull"
        app:layout_constraintTop_toTopOf="@+id/checkBoxCull" />

    <RadioGroup
        android:id="@+id/radioGroupPersFrus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerShader">

        <RadioButton
            android:id="@+id/radioButtonPers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perspective" />

        <RadioButton
            android:id="@+id/radioButtonFrus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Frustum" />

        <RadioButton
            android:id="@+id/radioButtonOrth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ortho" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/seekBarFov"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="180"
        android:progress="45"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFov"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewFov"
        app:layout_constraintTop_toTopOf="@+id/textViewFov" />

    <TextView
        android:id="@+id/textViewFov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Fov"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupPersFrus" />

    <TextView
        android:id="@+id/textViewNear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Near"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFov" />

    <SeekBar
        android:id="@+id/seekBarNear"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="20"
        android:progress="1"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewNear"
        app:layout_constraintTop_toTopOf="@+id/textViewNear" />

    <TextView
        android:id="@+id/textViewFar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Far"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNear" />

    <SeekBar
        android:id="@+id/seekBarFar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="50"
        android:progress="10"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewFar"
        app:layout_constraintTop_toTopOf="@+id/textViewFar" />

</android.support.constraint.ConstraintLayout>