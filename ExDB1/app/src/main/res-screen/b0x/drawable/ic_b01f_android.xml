<?xml version="1.0" encoding="utf-8"?>

<!-- 押す:ドロイド君が赤くなる -->
<!-- 通常:ドロイド君が黒くなる -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/ic_b01f_android_red" /> <!-- pressed -->
    <item android:state_focused="true"
        android:drawable="@drawable/ic_b01f_android_green" /> <!-- focused -->
    <item android:state_hovered="true"
        android:drawable="@drawable/ic_b01f_android_blue" /> <!-- hovered -->
    <item android:drawable="@drawable/ic_b01f_android_black" /> <!-- default -->
</selector>