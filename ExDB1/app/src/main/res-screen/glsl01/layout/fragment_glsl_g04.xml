<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <milu.kiriu2010.gui.view.MyGLES20View
        android:id="@+id/myGLES20ViewG04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupG04A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myGLES20ViewG04">

        <RadioButton
            android:id="@+id/radioButtonG04Ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/RB_G04_RING" />

        <RadioButton
            android:id="@+id/radioButtonG04RingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_RINGTIME" />

        <RadioButton
            android:id="@+id/radioButtonG04Gradation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_GRADATION" />

        <RadioButton
            android:id="@+id/radioButtonG04Cone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_CONE" />

        <RadioButton
            android:id="@+id/radioButtonG04ZoomLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_ZOOMLINE" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupG04B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroupG04A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioGroupG04A"
        app:layout_constraintTop_toTopOf="@+id/radioGroupG04A" >

        <RadioButton
            android:id="@+id/radioButtonG04Flower1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_FLOWER1" />

        <RadioButton
            android:id="@+id/radioButtonG04Wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_WAVE" />

        <RadioButton
            android:id="@+id/radioButtonG04Flower2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_FLOWER2" />

        <RadioButton
            android:id="@+id/radioButtonG04Fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/RB_G04_FAN" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>