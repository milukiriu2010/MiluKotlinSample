<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <milu.kiriu2010.exdb1.opengl.MyGL02View
        android:id="@+id/myGL02ViewW30"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnW030ContextClearColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="背景色"
        app:layout_constraintEnd_toStartOf="@+id/btnW030BlendConstantColor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myGL02ViewW30" />

    <Button
        android:id="@+id/btnW030BlendConstantColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="ブレンド定数"
        app:layout_constraintBottom_toBottomOf="@+id/btnW030ContextClearColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnW030ContextClearColor"
        app:layout_constraintTop_toTopOf="@+id/btnW030ContextClearColor" />

    <Button
        android:id="@+id/btnW030Model1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="テクスチャ"
        app:layout_constraintEnd_toStartOf="@+id/btnW030Model2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnW030BlendConstantColor" />

    <Button
        android:id="@+id/btnW030Model2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="板ポリゴン"
        app:layout_constraintBottom_toBottomOf="@+id/btnW030Model1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnW030Model1"
        app:layout_constraintTop_toTopOf="@+id/btnW030Model1" />
</android.support.constraint.ConstraintLayout>